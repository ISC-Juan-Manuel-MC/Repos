<Window x:Class="GeneradorXaml.PedirCantidad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeneradorXaml"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Cantidad o Columnas" Height="122.379" Width="300">
    
    <StackPanel Margin="0,0,0,27">

        <StackPanel Orientation="Horizontal">
            <Label Content="Número"></Label>
            <TextBox x:Name="txtCantidad" Text="1" Width="225"></TextBox>
        </StackPanel>
        <Button  x:Name="button" Click="button_Click" Content="Aceptar"/>
    </StackPanel>
</Window>
